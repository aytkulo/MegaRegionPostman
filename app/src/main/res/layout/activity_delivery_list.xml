<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
                android:id="@+id/card_view_sender1"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="@dimen/card_album_radius"
                card_view:elevation="5dp"
                card_view:cardBackgroundColor="@color/light_blue">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/txt_Origin"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        style="@style/InlineLabels"
                        android:text="@string/Origin"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"/>

                <Spinner
                        android:id="@+id/sp_Origin"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.7"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:id="@+id/card_view_sender2"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="@dimen/card_album_radius"
                card_view:elevation="5dp"
                card_view:cardBackgroundColor="@color/light_blue">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/txt_Destination"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        style="@style/InlineLabels"
                        android:text="@string/Destination"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"/>

                <Spinner
                        android:id="@+id/sp_Destination"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.7"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
                android:id="@+id/card_view_swee"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="@dimen/card_album_radius"
                card_view:elevation="5dp"
                card_view:cardBackgroundColor="@color/light_blue">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/txt_Name"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        style="@style/InlineLabels"
                        android:text="@string/Name"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"/>

                <EditText
                        android:id="@+id/ed_Name"
                        style="@style/InputTexts"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:inputType="textPersonName"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="3dp"
                        android:text=""/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/card_view_sss"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="@dimen/card_album_radius"
                card_view:elevation="5dp"
                card_view:cardBackgroundColor="@color/light_blue">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/txt_Phone"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        style="@style/InlineLabels"
                        android:text="@string/PhoneNo"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"/>

                <EditText
                        android:id="@+id/ed_Tel"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        style="@style/InputTexts"
                        android:inputType="phone"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:layout_marginTop="3dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
                android:id="@+id/card_view_se"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="@dimen/card_album_radius"
                card_view:elevation="5dp"
                card_view:cardBackgroundColor="@color/light_blue">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/txt_Address"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        style="@style/InlineLabels"
                        android:text="@string/PaymentType"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"/>

                <EditText
                        android:id="@+id/ed_Address"
                        style="@style/InputTexts"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:inputType="textPersonName"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="3dp"
                        android:visibility="gone"
                        android:text=""/>

                <Spinner
                    android:id="@+id/spinner_paymentType"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.7"
                    android:layout_marginRight="20dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:entries="@array/payment_types"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/card_view_s3"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="@dimen/card_album_radius"
                card_view:elevation="5dp"
                card_view:cardBackgroundColor="@color/light_blue">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/txt_Date"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        style="@style/InlineLabels"
                        android:text="@string/Date"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"/>

                <EditText
                        android:id="@+id/ed_Date"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        style="@style/MainLabels"
                        android:focusable="false"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:layout_marginTop="3dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
                android:id="@+id/card_view_s456"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="@dimen/card_album_radius"
                card_view:elevation="5dp"
                card_view:cardBackgroundColor="@color/light_blue">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView83"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        style="@style/InlineLabels"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/Postman"/>

                <Spinner
                        android:id="@+id/spinner_postman"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_dList"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimary"
                android:text="@string/List"
                android:textColor="@color/white"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
            android:id="@+id/card_view_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            card_view:cardCornerRadius="@dimen/card_album_radius"
            card_view:elevation="5dp"
            card_view:cardBackgroundColor="@color/corporateBackColor">

        <ListView
                android:id="@+id/listViewDeliveries"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@color/white"
                android:dividerHeight="5dp"
                android:listSelector="@drawable/list_selector"
                android:layout_marginTop="0dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>